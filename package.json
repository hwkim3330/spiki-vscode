{
  "name": "spiki-tamagotchi",
  "displayName": "Spiki Tamagotchi",
  "description": "귀여운 스피키와 함께 코딩하세요! 코딩할수록 스피키가 행복해져요. Cute coding companion that grows with you!",
  "version": "1.1.0",
  "publisher": "kimhyunwoo",
  "author": {
    "name": "Kim Hyunwoo"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "tamagotchi",
    "pet",
    "productivity",
    "fun",
    "companion",
    "coding",
    "virtual pet",
    "gamification",
    "spiki",
    "cute"
  ],
  "icon": "media/images/spiki1.png",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "spiki.show",
        "title": "Spiki: Show Spiki",
        "icon": "$(heart)"
      },
      {
        "command": "spiki.feed",
        "title": "Spiki: Feed Spiki",
        "icon": "$(feedback)"
      },
      {
        "command": "spiki.play",
        "title": "Spiki: Play with Spiki",
        "icon": "$(sparkle)"
      },
      {
        "command": "spiki.pet",
        "title": "Spiki: Pet Spiki",
        "icon": "$(heart-filled)"
      },
      {
        "command": "spiki.toggleEditorSpiki",
        "title": "Spiki: Toggle Editor Spiki",
        "icon": "$(eye)"
      },
      {
        "command": "spiki.addEditorSpiki",
        "title": "Spiki: Add Spiki to Editor",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spiki-container",
          "title": "Spiki",
          "icon": "media/images/spiki-icon.svg"
        }
      ]
    },
    "views": {
      "spiki-container": [
        {
          "type": "webview",
          "id": "spiki.panel",
          "name": "Spiki"
        }
      ]
    },
    "configuration": {
      "title": "Spiki Tamagotchi",
      "properties": {
        "spiki.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Spiki status in the status bar"
        },
        "spiki.soundEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable sound effects"
        },
        "spiki.autoFeed": {
          "type": "boolean",
          "default": true,
          "description": "Automatically reward Spiki for coding activity"
        },
        "spiki.editorSpiki": {
          "type": "boolean",
          "default": true,
          "description": "Show Spiki in the editor gutter"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hwkim3330/spiki-vscode"
  },
  "bugs": {
    "url": "https://github.com/hwkim3330/spiki-vscode/issues"
  },
  "homepage": "https://github.com/hwkim3330/spiki-vscode#readme"
}
